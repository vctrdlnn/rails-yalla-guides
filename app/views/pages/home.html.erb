        <div class="presentation text-center"><p>Voyager sereinement</p></div>
      </div>
      <div class="col-xs-12 col-lg-3">
        <%= image_tag("mail.png", height: '70') %>
        <div class="presentation text-center"><p>Poser directement vos questions</p></div>
      </div>
