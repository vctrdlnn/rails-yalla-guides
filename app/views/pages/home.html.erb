<%= render 'shared/navbarfixed' %>

<div id="banner">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-8 col-lg-offset-2 text-center">
        <%= simple_form_for :search, html: {class: 'form-inline'} do |f| %>
          <%= f.input :location , label: false , placeholder: 'où?'%>
          <%= f.input :date , label: false , placeholder: 'quand?' %>
          <%= f.submit "c'est parti!", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="padded"></div>

<div class="wrapper text-center">
  <div class="container">
    <div class="row text-center">
      <div class="col-xs-12 col-lg-3">
