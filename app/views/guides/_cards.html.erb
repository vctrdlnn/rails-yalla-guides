<% if @guides.empty? %>
  <h2>No tours yet!</h2>
  <%= link_to new_guide_path do %>
    <button type="button" class="btn btn-success btn-lg">
      Propose a tour in your city now!
    </button>
  <% end %>
<% else %>
  <% @guides.each do |guide| %>
    <div class="col-xs-12 col-sm-6">
      <div class="card text-center">
        <%= link_to "", guide_path(guide), {class: "card-link"} %>
        <%= image_tag guide.photo, height: 200, width: 300, crop: :fill %>
        <div class="card-name"><%= guide.profile.user.first_name %></div>
        <div class="card-price"><%= 'â‚¬' + guide.hourly_price.to_s + '/hour'%></div>
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <div class="cart-review"><%= 'the reviews here' %></div>
          </div>
          <div class="col-xs-12 col-lg-6">
            <div class="card-title"><%= guide.title %></div>
          </div>
        </div>
        <ul class='card-title list-inline text-center'>
          <% if current_user.profile != nil %>
            <li><%= link_to edit_guide_path(guide) do %>
              <i class="fa fa-pencil fa-1x" aria-hidden="true"></i>
              <% end %>
            </li>
            <li><%= link_to guide_path(guide), method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash fa-1x" aria-hidden="true"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
