<div class="container">
  <div class="row centered-form">
    <%= simple_form_for(@guide) do |f| %>
      <% if @guide.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @guide.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="panel panel-default">
          <div class="form-inputs">
            <div class="panel-heading">
              <h2 class="text-center">Create your guide</h2>
            </div>

              <div class="panel-body">
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :title %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :description %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :address %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :city %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :daily_price %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :category %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12">
                    <%= f.input :photo %>
                  </div>
                </div>

                <div class="min-padded"></div>
                <div class="form-actions text-center">
                  <%= f.button :submit %>
                  <%= link_to "Back", guides_path, {class: "btn btn-primary"} %>
                </div>
               <div class="min-padded"></div>
              </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="padded"></div>

