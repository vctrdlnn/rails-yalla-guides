<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <% if @guide[:photo] %>
        <%= cl_image_tag @guide.photo, height: 150, width: 150, crop: :fill , class: "guide-photo"%>
      <% end %>
      <p><%= @guide.profile.user.first_name %></p>
      <p><%= @guide.title %></p>
      <p><%= @guide.city %></p>

      <p><%= @guide.description %></p>
      <p><%= "at #{@guide.address}" %></p>
      <p><%= "What to expect: #{@guide.category}" %></p>
      <p><%= "#{@guide.daily_price} Eur/day" %></p>

      <%= link_to guides_path do %>
        <button type="button" class="btn btn-primary">Back</button>
      <% end %>
      <%= link_to new_guide_booking_path(@guide) do %>
        <button type="button" class="btn btn-primary">Book now !!!</button>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-6">
      <h3>The perfect plan</h3>
      <table class="table table-hover">
          <colgroup>
            <col>
            <col class="align-right">
          </colgroup>
        <thead>
          <tr>
            <th>Step</th>
            <th>Establishment</th>
            <th>Delete?</th>
          </tr>
        </thead>
        <tfoot>
          <%= simple_form_for [@guide, @step] do |f| %>
            <tr class="warning">
              <td>
                <%= f.input :title, label: false, placeholder: 'Step' %>
              </td>
              <td>
                <%= f.input :establishment, label: false, placeholder: 'Establishment' %>
                <%= f.input :address, as: :hidden, label: false %>
                <%= f.input :city, as: :hidden, label: false %>
                <%= f.input :category, as: :hidden, label: false %>
              </td>
              <td>
                <%= f.button :submit, "Add", class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tfoot>
        <tbody>
         <% @guide.steps.each do |step| %>
            <tr>
              <td class="text-left"><%= step.title %></td>
              <td class="text-right"><%= step.establishment %></td>
              <td class="text-right">
                <%= link_to guide_step_path(@guide, step) , method: :delete, data: {confirm: "are you sure ?"} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-12 col-sm-12">
      <div class="container-map">
        <div id="map" style="width: 100%; height: 500px;"></div>
      </div>
    </div>

  </div>
</div>


<% content_for(:js) do %>
  <script>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
