<% if @guide[:photo] %>
  <%= cl_image_tag @guide.photo, height: 150, width: 150, crop: :fill , class: "guide-photo"%>
<% end %>

<h2><%= @guide.title %></h2>
<h2><%= @guide.city %></h2>


<h2><%= @guide.description %></h2>
<h2><%= @guide.start_address %></h2>
<h2><%= @guide.end_address %></h2>
<h2><%= @guide.hourly_price %></h2>
<h2><%= @guide.category %></h2>





<%= link_to guides_path do %>
  <button type="button" class="btn btn-primary">Back</button>
<% end %>
