<h2>Pick your guide</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="row">
        <% @guides.each do |guide| %>
          <div class="col-xs-12 col-sm-6">

            <% if guide[:photo] %>
              <div class="card"
                style="background-image: url('<%= cl_image_path guide.photo, height: 200, width: 200, crop: :fill %>')">
                <%= link_to "", guide_path(guide), {class: "card-link"} %>
              </div>
            <% end %>

            <div class="card-description text-center">
              <%= 'â‚¬' + guide.hourly_price.to_s + '/hour'%>

              <ul class='card-title list-inline text-center'>
                <li><%= guide.title %></li>
                <% if current_user.profiles.where(role: 'host').first != nil %>
                  <li><%= link_to edit_guide_path(guide) do %>
                    <i class="fa fa-pencil fa-1x" aria-hidden="true"></i>
                  <% end %></li>
                  <li><%= link_to guide_path(guide), method: :delete,
                    data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash fa-1x" aria-hidden="true"></i>
                  <% end %></li>
                <% end %>
              </ul>
              <%= 'the reviews here' %>
            </div>


          </div>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">
      <%= 'card' %>
    </div>
  </div>
</div>



