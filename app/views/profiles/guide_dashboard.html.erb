<div class="container">
<div class="row">
  <div class="col-xs-12">
    <h2>Guide Dashboard</h2>
  </div>
</div>
  <div class="row">
    <div class="col-xs-4 col-sm-3">
      <nav class="nav-sidebar">
        <ul class="nav tabs">
          <li class="active"><a href="#tab1" data-toggle="tab">Booked tours</a></li>
          <li class=""><a href="#tab2" data-toggle="tab">My tours</a></li>
        </ul>
      </nav>
    </div>
    <!-- tab content -->
    <div class="col-xs-8 col-sm-9">
      <div class="tab-content">
        <div class="tab-pane active text-style" id="tab1">
            <div class="row">
              <%= render 'guides/cardbooking' %>
          </div>
        </div>
        <div class="tab-pane text-style" id="tab2">
          <div class="row text-center">
            <div class="col-xs-12">
              <%= link_to new_guide_path do %>
                <button class='btn btn-success btn-lg'>
                  Add another tour
                </button>
              <% end %>
            </div>
          </div>
          <%= render 'guides/cards' %>
        </div>

      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', root_path %>



